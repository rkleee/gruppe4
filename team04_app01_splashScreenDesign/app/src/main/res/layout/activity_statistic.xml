<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.l_pba.team04_app01_splashscreendesign.StatisticActivity">

    <!--SlidingUp-Panel -->
    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        xmlns:sothree="http://schemas.android.com/apk/res-auto"
        android:id="@+id/sliding_layout"
        android:layout_width="382dp"
        android:layout_height="567dp"
        android:gravity="bottom"
        sothree:umanoPanelHeight="68dp"
        sothree:umanoShadowHeight="4dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="-2dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top">

            <TextView
                android:id="@+id/statistic"
                android:layout_width="154dp"
                android:layout_height="39dp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="casual"
                android:text="@string/statistics"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.017" />

            <WebView
                android:id="@+id/webView"
                android:layout_width="370dp"
                android:layout_height="358dp"
                android:layout_marginTop="8dp"
                sothree:layout_constraintTop_toBottomOf="@+id/statistic"
                sothree:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                sothree:layout_constraintLeft_toLeftOf="parent"
                sothree:layout_constraintRight_toRightOf="parent"
                sothree:layout_constraintVertical_bias="0.0"
                sothree:layout_constraintHorizontal_bias="0.0" >

            </WebView>
            <TextView
                android:id="@+id/textViewLogo"
                android:layout_width="138dp"
                android:layout_height="33dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:lineSpacingExtra="36sp"
                android:text="MCROUTE"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/cardview_dark_background"
                android:textSize="24sp"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="158dp"
                app:layout_constraintTop_toBottomOf="@+id/mapbutton"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewCreator"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />
            <!-- Displays "Created by group04" -->
            <TextView
                android:id="@+id/textViewCreator"
                android:layout_width="136dp"
                android:layout_height="22dp"
                android:layout_marginBottom="26dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:text="@string/created_by"
                android:textColor="?attr/colorButtonNormal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                sothree:layout_constraintHorizontal_bias="0.502" />

            <Button
                android:id="@+id/secretbutton"
                style="@style/Widget.AppCompat.Button"
                android:layout_width="158dp"
                android:layout_height="70dp"
                sothree:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                sothree:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="8dp"
                sothree:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginTop="8dp"
                sothree:layout_constraintTop_toBottomOf="@+id/webView"
                sothree:layout_constraintVertical_bias="0.7" />

        </android.support.constraint.ConstraintLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:gravity="bottom"
                android:id="@+id/constraintLayout3">

                <TextView
                    android:id="@+id/informationtv"
                    android:layout_width="246dp"
                    android:layout_height="42dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="casual"
                    android:text="INFORMATION"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.037" />

                        <ListView
                            android:id="@+id/listviewst"
                            android:layout_width="352dp"
                            android:layout_height="245dp"
                            android:layout_marginBottom="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_marginTop="8dp"
                            sothree:layout_constraintBottom_toBottomOf="parent"
                            sothree:layout_constraintHorizontal_bias="0.0"
                            sothree:layout_constraintLeft_toLeftOf="parent"
                            sothree:layout_constraintRight_toRightOf="parent"
                            sothree:layout_constraintTop_toBottomOf="@+id/informationtv"
                            sothree:layout_constraintVertical_bias="0.0" />

            </android.support.constraint.ConstraintLayout>



    </com.sothree.slidinguppanel.SlidingUpPanelLayout>
</android.support.constraint.ConstraintLayout>
