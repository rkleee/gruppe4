<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:mapbox="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:keepScreenOn="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.mapboxsdk.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="379dp"
        android:layout_height="581dp"

        mapbox:layout_constraintBottom_toBottomOf="parent"

        mapbox:layout_constraintHorizontal_bias="0.6"
        mapbox:layout_constraintLeft_toLeftOf="parent"
        mapbox:layout_constraintRight_toRightOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        mapbox:layout_constraintVertical_bias="0.0"
        mapbox:mapbox_cameraBearing="0"
        mapbox:mapbox_cameraTargetLat="49.99024947275354"
        mapbox:mapbox_cameraTargetLng="8.233534097671508"
        mapbox:mapbox_cameraTilt="45"
        mapbox:mapbox_cameraZoom="17"
        mapbox:mapbox_cameraZoomMax="20"
        mapbox:mapbox_cameraZoomMin="0"
        mapbox:mapbox_uiRotateGestures="true">

    </com.mapbox.mapboxsdk.maps.MapView>

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="99dp"
        android:layout_height="93dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        android:alpha="0.80"
        android:background="@android:color/transparent"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        mapbox:layout_constraintVertical_bias="0.982"
        mapbox:srcCompat="@drawable/playicon3"
        mapbox:layout_constraintRight_toRightOf="parent"
        mapbox:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="458dp" />

    <ImageButton
        android:id="@+id/databtn"
        android:layout_width="88dp"
        android:layout_height="88dp"
        mapbox:srcCompat="@drawable/dataic1"
        android:visibility="visible"
        android:alpha="0.80"
        android:background="@android:color/transparent"
        mapbox:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        mapbox:layout_constraintLeft_toLeftOf="parent"
        mapbox:layout_constraintRight_toLeftOf="@+id/playButton"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintHorizontal_bias="1.0"
        mapbox:layout_constraintVertical_bias="0.982" />

    <ImageButton
        android:id="@+id/saveButton"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        android:alpha="0.80"
        android:background="@android:color/transparent"
        mapbox:layout_constraintBottom_toBottomOf="parent"
        mapbox:layout_constraintRight_toRightOf="parent"
        mapbox:layout_constraintTop_toTopOf="parent"
        mapbox:layout_constraintVertical_bias="0.982"
        mapbox:srcCompat="@drawable/saveic"
        mapbox:layout_constraintLeft_toRightOf="@+id/playButton"
        mapbox:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>